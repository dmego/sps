page {
  background: #f3f4f5;
  display: flex;
  height: 100vh;
  background: #fff;
  flex-direction: column;
}

.status-header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #fff;
  background: #fff;
  border-bottom: 1rpx solid #ebebeb;
}

.status-header .loading-icon {
  width: 100rpx;
  height: 100rpx;
  animation: loading 2s infinite linear;
}

.status-header .success-icon {
  width: 100rpx;
  height: 100rpx;
}

.status-header .loading-text {
  margin-top: 26rpx;
  font-size: 28rpx;
  color: #666;
}

.status-header .tp-text {
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.status-header .btm-text {
  text-align: center;
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #999;
}

.notice {
  color: #666;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 25rpx 0;
}

.notice .notice-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.notice .notice-left .riding-text {
  margin: 0 3rpx;
  font-size: 32rpx;
  color: #3891f8;
}

.notice .notice-right {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  border-left: 1rpx solid #ebebeb;
}

.notice .notice-right .icon-right {
  width: 32rpx;
  height: 32rpx;
}

.notice .notice-right .bill-text {
  margin-right: 5rpx;
  font-size: 50rpx;
  color: #3891f8;
}

.map-wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
}

.map-wrap map {
  display: block;
  flex: 1;
  height: 150rpx;
  width: 100%;
}

.map-reset {
  position: absolute;
  width: 76rpx;
  height: 76rpx;
  right: 20rpx;
  bottom: 50rpx;
}

.foot-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-radius: 0;
  color: #666;
}

.repair {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 0;
}

.repair .repair-icon {
  width: 29.6rpx;
  height: 29.6rpx;
  margin-right: 5rpx;
}

.repair .repair-text {
  font-size: 24rpx;
  color: #666;
}

.toLock {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #ebebeb;
  height: 100%;
  font-size: 0;
}

.toLock .toLock-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.toLock .toLock-text {
  font-size: 24rpx;
  color: #666;
}

.map-shadow-top {
  position: absolute;
  width: 100%;
  height: 10rpx;
  top: 0;
}

.map-shadow-btm {
  position: absolute;
  width: 100%;
  height: 10rpx;
  bottom: 0;
}

@keyframes loading {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

@-webkit-keyframes loading {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.map-icon_point {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  margin-top: -40rpx;
  width: 32px;
  height: 32px;
}